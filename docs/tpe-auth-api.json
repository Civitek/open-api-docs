{
  "openapi": "3.1.0",
  "info": {
    "title": "TPE User Authorization",
    "description": "This service provides endpoints for obtaining and refreshing OAuth2-style tokens.\n\n### Usage Flow\n1. Call **`/api/auth/token`** with Basic Authentication to generate an access token and a refresh token.\n2. Use the **access token** (JWT) in the `Authorization` header (`Bearer {accessToken}`) to access secured APIs.\n3. When the access token expires, call **`/api/auth/refresh`** with the refresh token (in the `Authorization` header) to obtain a new access token without re-sending Basic Auth credentials.",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://testauthgateway.civikestpayment.com"
    }
  ],
  "tags": [
    {
      "name": "Authentication Service",
      "description": "Provides endpoints for generating and refreshing access tokens."
    }
  ],
  "paths": {
    "/api/auth/token": {
      "post": {
        "tags": ["Authentication Service"],
        "summary": "Generate Token",
        "description": "Authenticate using **Basic Authentication** (username and password or client credentials).\n\nReturns both an **access token** (short-lived) and a **refresh token** (longer-lived).\n\nExample:\n```\nAuthorization: Basic base64(username:password)\n```",
        "operationId": "createToken",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OAuth2TokenResponse"
                },
                "example": {
                  "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                  "tokenType": "Bearer",
                  "expiresIn": 3600,
                  "refreshToken": "3fa85f64-5717-4562-b3fc-2c963f66afa6"
                }
              }
            }
          },
          "401": {
            "description": "Invalid username or password",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Invalid username or password"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Server Exception: ..."
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/refresh": {
      "post": {
        "tags": ["Authentication Service"],
        "summary": "Refresh Token",
        "description": "Refreshes an expired access token using the **refresh token**.\n\nAuthenticate using `Authorization: Bearer {refreshToken}` header.\n\nA new access token (and optionally a new refresh token) is returned.",
        "operationId": "refreshToken",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token refreshed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OAuth2TokenResponse"
                },
                "example": {
                  "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                  "tokenType": "Bearer",
                  "expiresIn": 3600,
                  "refreshToken": "6ba85f64-9999-4562-b3fc-2c963f66bbb7"
                }
              }
            }
          },
          "401": {
            "description": "Invalid or expired refresh token",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Invalid or expired refresh token"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Server Exception: ..."
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OAuth2TokenResponse": {
        "type": "object",
        "description": "Represents the response returned after a successful authentication.",
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "JWT access token used to authenticate API requests.",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "tokenType": {
            "type": "string",
            "description": "The type of token issued, typically 'Bearer'.",
            "example": "Bearer"
          },
          "expiresIn": {
            "type": "integer",
            "format": "int64",
            "description": "The number of seconds until the access token expires.",
            "example": 3600
          },
          "refreshToken": {
            "type": "string",
            "description": "Refresh token used to obtain a new access token.",
            "example": "3fa85f64-5717-4562-b3fc-2c963f66afa6"
          }
        }
      }
    },
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic",
        "description": "Basic Authentication using username and password."
      },
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Bearer authentication using a refresh token."
      }
    }
  }
}
